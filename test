pipeline {
        agent any
        stages {
                stage('ADD') {
                        agent any
      steps {
                                sh '''
                                        a=10
                                        b=20
                                        sum=$(( $a + $b ))
                                        echo "Sum is: $sum"
                                '''
                        }
                }

                stage('SUB') {
    agent any
                        steps {
                                sh '''
                                        
                                        b=20
                                        diff=$(( $sum - $b ))
                                        echo "DIFF is: $diff"
                                '''
                        }
                }

                stage('MUL') {
                         agent any
      steps {
                                sh '''
                                        
                                        b=20
                                        mul=$(( $diff * $b ))
                                        echo "PRODUCT is: $mul"
                                '''
                        }
                }
                stage('DIV'){
                        agent any
        steps{
                        sh '''
                                        
                                        b=20
                                        quo=$(( $mul / $b ))
                                        echo "VALUE  is: $quo"

                        '''
                        }
                }
        }
}

